<Window x:Class="CoreDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreDesktop"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
>
    <Grid>
        <TextBox Text="{Binding Path=Message, Mode=TwoWay}" HorizontalAlignment="Left" Margin="25,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" Height="194" FontSize="16"/>

        <Button Content="Clear" Click="OnClearButtonClick" HorizontalAlignment="Left" Margin="25,235,0,0" VerticalAlignment="Top" Width="89"/>

        <Button Content="Display Hello World" Click="OnDisplayHelloWorldButtonClick" HorizontalAlignment="Left" Margin="128,235,0,0" VerticalAlignment="Top"/>
        <Button Content="Display Network Info" Click="OnDisplayNetworkInfoButtonClick" HorizontalAlignment="Left" Margin="376,235,0,0" VerticalAlignment="Top" Width="131"/>

    </Grid>
</Window>
