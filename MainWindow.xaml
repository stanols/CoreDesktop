<Window x:Class="CoreDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBlock Text="{Binding Message}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Display Message" Click="OnButtonClick" HorizontalAlignment="Left" Margin="576,361,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
